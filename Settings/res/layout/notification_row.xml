<!-- Layout for an action item displayed in the 2 pane dialog. -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:focusable="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:id="@+id/custom_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingRight="@dimen/list_item_right_padding"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/main_style"
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_min_height" >

        <FrameLayout
            android:id="@+id/icon"
            android:layout_width="@dimen/list_item_icon_big_width"
            android:layout_height="@dimen/list_item_icon_big_height"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/list_item_icon_big_margin_right" >

            <ImageView
                android:id="@+id/icon_big"
                style="@style/Canvas.Image.Dialog.Content.Icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/icon_small"
                style="@style/Canvas.Image.Dialog.Content.Icon"
                android:layout_width="@dimen/list_item_icon_small_width"
                android:layout_height="@dimen/list_item_icon_small_height"
                android:layout_gravity="center"
                tools:ignore="ContentDescription" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignWithParentIfMissing="true"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/icon"
            android:orientation="vertical"
            android:paddingRight="@dimen/list_item_right_padding" >

            <RelativeLayout
                android:id="@+id/title_with_timestamp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <com.android.tv.settings.notifications.NotificationDateTimeView
                    android:id="@+id/timestamp"
                    style="@style/Canvas.Text.Dialog.List.Timestamp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/title"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/list_item_unselected_text_color"
                    android:alpha="@dimen/list_item_unselected_text_alpha"
                    android:gravity="right|bottom" />

                <TextView
                    android:id="@+id/title"
                    style="@style/Canvas.Text.Dialog.List.Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_toLeftOf="@id/timestamp"
                    android:textColor="@color/list_item_selected_title_text_color"
                    android:alpha="@dimen/list_item_selected_title_text_alpha"
                    android:ellipsize="end"
                    android:gravity="left|bottom"
                    android:singleLine="true" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/progress_with_percentage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" >

                <ProgressBar
                    android:id="@+id/progress"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="12dp" />

                <TextView
                    android:id="@+id/percentage"
                    style="@style/Canvas.Text.Dialog.List.Timestamp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/progress" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/text_with_badge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/badge_icon"
                    style="@style/Canvas.Image.Dialog.List.Icon"
                    android:layout_width="@dimen/list_item_badge_icon_width"
                    android:layout_height="@dimen/list_item_badge_icon_height"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/list_item_badge_icon_margin_left"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/badge_text"
                    style="@style/Canvas.Text.Dialog.List.Badge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignWithParentIfMissing="true"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/badge_icon" />

                <TextView
                    android:id="@+id/description"
                    style="@style/Canvas.Text.Dialog.List.Description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_toLeftOf="@id/badge_text"
                    android:textColor="@color/list_item_selected_description_text_color"
                    android:alpha="@dimen/list_item_selected_description_text_alpha"
                    android:ellipsize="end"
                    android:singleLine="true" />

                <TextView
                    android:id="@+id/subtext"
                    style="@style/Canvas.Text.Dialog.List.Description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/description"
                    android:layout_toLeftOf="@id/badge_text"
                    android:textColor="@color/list_item_selected_description_text_color"
                    android:alpha="@dimen/list_item_selected_description_text_alpha"
                    android:ellipsize="end"
                    android:singleLine="true" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

</FrameLayout>
